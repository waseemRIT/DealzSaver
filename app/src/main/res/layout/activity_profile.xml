<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Greeting Text ("Hi, username!") -->
    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, username!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Coupon 1 Title -->
    <TextView
        android:id="@+id/tv_coupon1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"/>

    <!-- Coupon 1 Description -->
    <TextView
        android:id="@+id/tv_coupon1_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:paddingBottom="16dp"/>

    <!-- Coupon 1 Mark as Used Button -->
    <Button
        android:id="@+id/btn_coupon1_used"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark as Used"
        android:backgroundTint="@color/ocean_blue"
        android:textColor="@android:color/white"/>

    <!-- Coupon 2 Title -->
    <TextView
        android:id="@+id/tv_coupon2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"/>

    <!-- Coupon 2 Description -->
    <TextView
        android:id="@+id/tv_coupon2_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:paddingBottom="16dp"/>

    <!-- Coupon 2 Mark as Used Button -->
    <Button
        android:id="@+id/btn_coupon2_used"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark as Used"
        android:backgroundTint="@color/ocean_blue"
        android:textColor="@android:color/white"/>

    <!-- Coupon 3 Title -->
    <TextView
        android:id="@+id/tv_coupon3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"/>

    <!-- Coupon 3 Description -->
    <TextView
        android:id="@+id/tv_coupon3_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:paddingBottom="16dp"/>

    <!-- Coupon 3 Mark as Used Button -->
    <Button
        android:id="@+id/btn_coupon3_used"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark as Used"
        android:backgroundTint="@color/ocean_blue"
        android:textColor="@android:color/white"/>

</LinearLayout>
